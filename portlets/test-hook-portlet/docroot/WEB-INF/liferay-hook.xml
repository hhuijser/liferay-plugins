<?xml version="1.0"?>
<!DOCTYPE hook PUBLIC "-//Liferay//DTD Hook 6.2.0//EN" "http://www.liferay.com/dtd/liferay-hook_6_2_0.dtd">

<hook>
	<portal-properties>portal.properties</portal-properties>
	<language-properties>content/Language*.properties</language-properties>
	<custom-jsp-dir>/META-INF/custom_jsps</custom-jsp-dir>
	<service>
		<service-type>com.liferay.portal.service.UserLocalService</service-type>
		<service-impl>com.liferay.testhook.hook.service.impl.TestHookUserLocalServiceImpl</service-impl>
	</service>
	<servlet-filter>
		<servlet-filter-name>HookFilter</servlet-filter-name>
		<servlet-filter-impl>com.liferay.testhook.hook.filter.HookFilter</servlet-filter-impl>
	</servlet-filter>
	<servlet-filter>
		<servlet-filter-name>BeforeHookFilter</servlet-filter-name>
		<servlet-filter-impl>com.liferay.testhook.hook.filter.BeforeHookFilter</servlet-filter-impl>
	</servlet-filter>
	<servlet-filter>
		<servlet-filter-name>AfterHookFilter</servlet-filter-name>
		<servlet-filter-impl>com.liferay.testhook.hook.filter.AfterHookFilter</servlet-filter-impl>
	</servlet-filter>
	<servlet-filter-mapping>
		<servlet-filter-name>HookFilter</servlet-filter-name>
		<url-pattern>*.jsp</url-pattern>
	</servlet-filter-mapping>
	<servlet-filter-mapping>
		<servlet-filter-name>HookFilter</servlet-filter-name>
		<url-pattern>/web/*</url-pattern>
	</servlet-filter-mapping>
	<servlet-filter-mapping>
		<servlet-filter-name>BeforeHookFilter</servlet-filter-name>
		<before-filter>HookFilter</before-filter>
		<url-pattern>*.jsp</url-pattern>
	</servlet-filter-mapping>
	<servlet-filter-mapping>
		<servlet-filter-name>AfterHookFilter</servlet-filter-name>
		<after-filter>HookFilter</after-filter>
		<url-pattern>*.jsp</url-pattern>
	</servlet-filter-mapping>
</hook>